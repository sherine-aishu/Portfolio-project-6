# Create deployment object to create nginx pods:
vi nginx-deployment.yaml 
********************************************************************************
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
spec:
  selector:
    matchLabels:
      app: nginx
  replicas: 1
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:1.14.2
        ports:
        - containerPort: 80
********************************************************************************

# Get pod details:
kubectl get pods

# Create service object to expose your nginx pod outside:
vi nginx-service.yaml 
********************************************************************************
apiVersion: v1
kind: Service
metadata:
  name: nginx-service
spec:
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 80
    protocol: TCP
  selector:
    app: nginx
********************************************************************************

# Get service details:
kubectl get services
